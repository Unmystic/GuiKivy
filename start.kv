#:kivy 2.0

MDScreen:
    md_bg_color: (211/255, 1, 222/255, 1)


    MDBoxLayout:
        orientation: 'vertical'
        spacing : 1
        pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            padding : 5
            spacing : 5
            orientation: 'horizontal'
            adaptive_height: True
            theme_bg_color: "Custom"
            md_bg_color: (1, 1, 1, 1)

            MDButton:
                theme_width: "Custom"
                radius:  [dp(5), dp(5), dp(5), dp(5)]
                style: "text"
                height: "16dp"
                width: "40dp"

                MDButtonText:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    text: "Menu"
                    theme_text_color: "Custom"
                    text_color: "black"

            MDButton:
                theme_width: "Custom"
                style: "text"
                height: "16dp"
                radius:  [0, 0, 0, 0]
                width: "40dp"

                MDButtonText:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    text: "About"
                    theme_text_color: "Custom"
                    text_color: "black"

            



        MDBoxLayout:
            padding : 5          

            FitImage:
                source: "animals_soccer.png"
            
                pos_hint: {"top": 1}
          


        MDBoxLayout:
            orientation: 'horizontal'
            padding : 5
            spacing : 5
            adaptive_height: True


            MDButton:
                theme_bg_color: "Custom"
                md_bg_color: (85/255, 170/255, 127/255, 1)
                style: "tonal"
                height: "50dp"
                theme_width: "Custom"
                size_hint_x: .20  
                theme_shadow_color: "Custom"
                shadow_color: "white"


                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "New League"
                    theme_font_name: "Custom"
                    font_name: "segoeprint_bold.ttf"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    theme_text_color: "Custom"
                    text_color: "black"
            
            MDButton:
                theme_bg_color: "Custom"
                md_bg_color: (85/255, 170/255, 127/255, 1)
                style: "tonal"
                height: "50dp"
                theme_width: "Custom"
                size_hint_x: .20  
                theme_shadow_color: "Custom"
                shadow_color: "white"


                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "Hall of Fame"
                    theme_font_name: "Custom"
                    font_name: "segoeprint_bold.ttf"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    theme_text_color: "Custom"
                    text_color: "black"
        
            MDButton:
                theme_bg_color: "Custom"
                md_bg_color: (85/255, 170/255, 127/255, 1)
                style: "tonal"
                height: "50dp"
                theme_width: "Custom"
                size_hint_x: .2   
                theme_shadow_color: "Custom"
                shadow_color: "white"
                on_release: app.about()


                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "About"
                    theme_font_name: "Custom"
                    font_name: "segoeprint_bold.ttf"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    theme_text_color: "Custom"  
                    text_color: "black"      

            MDButton:
                theme_bg_color: "Custom"
                md_bg_color: (85/255, 170/255, 127/255, 1)
                style: "tonal"
                height: "50dp"
                theme_width: "Custom"
                size_hint_x: .2   
                theme_shadow_color: "Custom"
                shadow_color: "white"



                MDButtonText:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "Exit Simulation"
                    theme_font_name: "Custom"
                    font_name: "segoeprint_bold.ttf"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    theme_text_color: "Custom"
                    text_color: "black"